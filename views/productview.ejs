  <script>
    document.addEventListener("DOMContentLoaded", () => {
        const pddelete = document.getElementById("deleteProduct");
        if (!pddelete) {
            console.error("Element with ID 'deleteProduct' not found!");
            return;
        }
    
        pddelete.addEventListener("submit", async (e) => {
            e.preventDefault(); // Prevent default form submission
            const confm = confirm("This Item Will Be Deleted Completely!!! Are you sure you want to do this?");
            if (!confm) return;
    
            const productId = document.getElementById("productId")?.textContent;
            if (!productId) {
                alert("Product ID not found!");
                return;
            }
    
            try {
                const res = await fetch(`/deleteproduct/${productId}`, {
                    method: "DELETE",
                    headers: { "Content-Type": "application/json" },
                });
    
                if (res.status === 200) {
                    alert("Product deleted successfully");
                } else {
                    alert("Failed to delete the product");
                }
            } catch (err) {
                console.error("Fetch error:", err);
                alert("Something went wrong");
            }
        });
    });
    

    remove.addEventListener("click", async(e)=>{
        e.preventDefault();
        alert("This Item can be recover")
        const productId = document.getElementById("productId").textContent;
        
        try {
            let res = await fetch(`/product/${productId}/delete`, {
                method: "DELETE",
                headers: { "Content-Type": "application/json" },
            });
    
            if (res.status === 200) {
                alert("Product removed successfully");
            } else {
               
                alert("Failed to remove the product");
            }
        } catch (err) {
            console.log(err);
            alert("Something went wrong");
        }
    })
  </script>

